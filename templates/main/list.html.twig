{% extends "base.html.twig" %}

{% block title %}Todo List{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/list.style.css') }}">
{% endblock %}

{% block body %}
<header>
    <h1>Todo List</h1>
</header>
<form>
    <input type="text" class="todo-input">
    <button type="submit" class="todo-add">
        <i class="fas fa-plus-square"></i>
    </button>
</form>
<div class="todo-container">
    <ul class="todo-list">
        {% for todo in todos %}
            <div class="todo {% if todo.completed %}completed{% endif %}">
                <li class="todo-item">{{ todo.title }}</li>
                <button class="complete-btn">
                    <i class="fas fa-check"></i>
                </button>
                <button id="{{ todo.id }}" class="delete-btn">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        {% endfor %}
    </ul>
</div>
{% endblock %}