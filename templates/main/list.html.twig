{% extends "base.html.twig" %}

{% block title %}Todo List{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/list.style.css') }}">
{% endblock %}

{% block body %}
<header>
    <h1>Todo List</h1>
</header>
<form action="{{ path('create') }}" method="POST">
    <input name="title" type="text" class="todo-input">
    <button type="submit" class="todo-add">
        <i class="fas fa-plus-square"></i>
    </button>
</form>
<div class="todo-container">
    <ul class="todo-list">
        {% for todo in todos %}
            <div class="todo {% if todo.completed %}completed{% endif %}">
                <li class="todo-item">{{ todo.title }}</li>
                <a href="{{ path('update', {'id': todo.id}) }}" class="complete-btn">
                    <i class="fas fa-check"></i>
                </a>
                <a href="{{ path('delete', {'id': todo.id}) }}" class="delete-btn">
                    <i class="fas fa-trash"></i>
                </a>
            </div>
        {% endfor %}
    </ul>
</div>
{% endblock %}